# Backend Environment Variables
# Copy this file to .env and fill in your values
# For local development, defaults are used if variables are not set

# MongoDB Connection String
# Local: mongodb://localhost:27017/tomato
# Production: mongodb+srv://username:password@cluster.mongodb.net/tomato
MONGODB_URI=mongodb://localhost:27017/tomato

# Server Configuration
# Port will be auto-assigned in production (Render, Heroku, etc.)
# For local development, defaults to 10000
PORT=8000

# Environment (development, production, staging)
# Automatically set to 'production' in deployed environments
NODE_ENV=development

# CORS Allowed Origins
# Comma-separated list of allowed origins
# For local development, defaults to localhost ports
# For production, set your actual frontend and admin URLs
# Example: https://your-frontend.com,https://your-admin.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:4173

# Clerk Authentication (Backend Secret Key)
# Get from Clerk Dashboard: https://dashboard.clerk.com
# Use test keys for development, live keys for production
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Razorpay Payment Gateway (Optional)
# Get from Razorpay Dashboard: https://dashboard.razorpay.com
# Leave empty if not using payment gateway
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Backend URL (for logging purposes in production)
# Set this to your production backend URL
BACKEND_URL=https://your-backend-url.onrender.com
